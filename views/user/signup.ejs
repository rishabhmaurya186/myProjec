<% layout('/layouts/boilerplate.ejs') -%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>SignUp for wornderlust</h1>
        <form action="/singup" method="post" class="needs-validation my-5" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username"  id="username" class="form-control" placeholder="Username" required>
                <div class="invalid-feedback">username is missing</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email"  id="email" class="form-control" placeholder="email" required>
                <div class="invalid-feedback">email is missing</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password"  id="password" class="form-control" placeholder="password" required>
                <div class="invalid-feedback">password is missing</div>
            </div>

           <button class="btn btn-success btn-sm">SignUp</button>
        </form>
    </div>
</div>
